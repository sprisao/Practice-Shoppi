<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item>
		<shape android:shape="oval">
			<size
					android:width="48dp"
					android:height="48dp"
					/>
			<gradient
					android:startColor="@color/shoppi_pink_01"
					android:endColor="@color/shoppi_purple"
					android:type="linear"
					android:angle="90"
					/>
		</shape>
	</item>
	
	<item
			android:top="1.5dp"
			android:left="1.5dp"
			android:right="1.5dp"
			android:bottom="1.5dp"
			>
		
		<shape android:shape="oval">
			<solid android:color="@color/shoppi_white"/>
		</shape>
	</item>
</layer-list>
